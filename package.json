{
  "name": "codemancer",
  "version": "1.0.0",
  "description": "https://www.codemancer.com/",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "minify": "npm run minify-js && npm run minify-css",
    "minify-js": "node bin/browserify.js | uglifyjs --config-file=.uglify.min.json -o codemancer/js/codemancer.min.js",
    "minify-css": "cleancss -o codemancer/css/codemancer.min.css -O2 codemancer/css/application.css codemancer/css/animations.css codemancer/css/calendar.css codemancer/css/weather.css",
    "eslint": "eslint app.js bin codemancer/js test",
    "cover": "nyc --require dotenv/config --instrument false mochify --transform envify --transform [ babelify --ignore [ test ] --plugins [ babel-plugin-istanbul ] ]",
    "stylelint": "stylelint codemancer/css/*",
    "test": "npm run stylelint && npm run eslint && npm run cover"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/albertyw/codemancer.git"
  },
  "author": "Albert Wang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/albertyw/codemancer/issues"
  },
  "homepage": "https://github.com/albertyw/codemancer#readme",
  "private": true,
  "dependencies": {
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "logfit": "^0.8.0",
    "morgan": "^1.9.1",
    "mustache": "^3.0.1",
    "rollbar": "^2.5.2",
    "rotating-file-stream": "^1.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "babel-plugin-istanbul": "^5.1.1",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "chai": "^4.2.0",
    "clean-css-cli": "^4.2.1",
    "envify": "^4.1.0",
    "eslint": "^5.14.1",
    "jquery": "^3.3.1",
    "mochify": "^6.0.4",
    "nyc": "^13.3.0",
    "q": "^1.5.1",
    "rollbar-browser": "^1.9.5",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "sweetalert": "^2.1.2",
    "uglify-es": "^3.3.9"
  }
}
