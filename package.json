{
  "name": "codemancer",
  "version": "1.0.0",
  "description": "https://www.codemancer.com/",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "postinstall": "npm run google && npm run install-hadolint",
    "google": "curl -s https://apis.google.com/js/api.js > codemancer/js/google.js",
    "minify": "npm run minify-js && npm run minify-css",
    "minify-js": "npm run google && node_modules/.bin/ts-node bin/browserify.ts",
    "minify-css": "git ls-files codemancer/css | xargs node_modules/.bin/cleancss -o codemancer/css/codemancer.$(git rev-parse HEAD).min.css -O2",
    "eslint": "tsc --noEmit && eslint . --ext .ts --quiet",
    "cover": "nyc --require dotenv/config --instrument false mochify -R dot --transform envify --transform [ babelify --plugins [ babel-plugin-istanbul ] ]",
    "stylelint": "stylelint codemancer/css/*",
    "shellcheck": "git ls-files | grep -F .sh | xargs shellcheck --exclude=SC1091",
    "test": "npm run stylelint && npm run shellcheck && npm run hadolint && npm run eslint",
    "install-hadolint": "curl -sL https://github.com/hadolint/hadolint/releases/download/v1.17.3/hadolint-Linux-x86_64 > node_modules/.bin/hadolint && chmod +x node_modules/.bin/hadolint",
    "hadolint": "hadolint Dockerfile --ignore=DL3008 --ignore=SC2046 --ignore=SC2006"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/albertyw/codemancer.git"
  },
  "author": "Albert Wang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/albertyw/codemancer/issues"
  },
  "homepage": "https://github.com/albertyw/codemancer#readme",
  "private": true,
  "dependencies": {
    "app-root-path": "^3.0.0",
    "axios": "^0.19.2",
    "browserify-middleware": "^8.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "logfit": "^0.8.1",
    "morgan": "^1.10.0",
    "mustache": "^4.0.1",
    "rollbar": "^2.19.0",
    "rotating-file-stream": "^2.1.3",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "varsnap": "^1.5.4"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/browserify": "^12.0.36",
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.1",
    "@types/node": "^14.0.27",
    "@types/sinon": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "babel-plugin-istanbul": "^6.0.0",
    "babelify": "^10.0.0",
    "browserify": "^16.5.0",
    "chai": "^4.2.0",
    "clean-css-cli": "^4.3.0",
    "envify": "^4.1.0",
    "eslint": "^7.5.0",
    "jquery": "^3.5.1",
    "mochify": "^6.6.0",
    "moxios": "^0.4.0",
    "nyc": "^15.1.0",
    "sinon": "^9.0.2",
    "stylelint": "^13.6.1",
    "stylelint-config-standard": "^20.0.0",
    "sweetalert2": "^9.17.1",
    "tinyify": "^2.5.2",
    "tsify": "^5.0.0",
    "uglify-es": "^3.3.9"
  }
}
