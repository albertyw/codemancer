{
  "name": "codemancer",
  "version": "1.0.0",
  "description": "https://www.codemancer.com/",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "google": "curl -s https://apis.google.com/js/api.js > codemancer/js/google.js",
    "minify": "npm run minify-js && npm run minify-css",
    "minify-js": "npm run google && node bin/browserify.js",
    "minify-css": "git ls-files codemancer/css | xargs cleancss -o codemancer/css/codemancer.min.css -O2",
    "eslint": "eslint server bin codemancer/js test",
    "cover": "nyc --require dotenv/config --instrument false mochify -R dot --transform envify --transform [ babelify --plugins [ babel-plugin-istanbul ] ]",
    "stylelint": "stylelint codemancer/css/*",
    "shellcheck": "git ls-files | grep -F .sh | xargs shellcheck",
    "test": "npm run stylelint && npm run shellcheck && npm run eslint && npm run cover"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/albertyw/codemancer.git"
  },
  "author": "Albert Wang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/albertyw/codemancer/issues"
  },
  "homepage": "https://github.com/albertyw/codemancer#readme",
  "private": true,
  "dependencies": {
    "browserify-middleware": "^8.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "logfit": "^0.8.0",
    "morgan": "^1.9.1",
    "mustache": "^3.1.0",
    "rollbar": "^2.13.0",
    "rotating-file-stream": "^1.4.6",
    "varsnap": "^1.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "babel-plugin-istanbul": "^5.2.0",
    "babelify": "^10.0.0",
    "browserify": "^16.5.0",
    "chai": "^4.2.0",
    "clean-css-cli": "^4.3.0",
    "envify": "^4.1.0",
    "eslint": "^6.6.0",
    "jquery": "^3.4.1",
    "mochify": "^6.6.0",
    "nyc": "^14.1.1",
    "sinon": "^7.5.0",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "sweetalert": "^2.1.2",
    "uglify-es": "^3.3.9",
    "uglifyify": "^5.0.2"
  }
}
