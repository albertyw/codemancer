{
  "name": "codemancer",
  "version": "1.0.0",
  "description": "https://www.codemancer.com/",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "dist-min": "babel codemancer/js/jquery.min.js codemancer/js/background.js | uglifyjs --config-file=.uglify.min.json -o codemancer/js/codemancer.min.js",
    "eslint": "eslint codemancer/js test",
    "mocha": "mocha-headless-chrome -f ./test/index.htm -c .nyc_output/coverage.json",
    "nyc-instrument": "nyc instrument ./codemancer/js ./instrumented",
    "stylelint": "stylelint codemancer/css/*",
    "test": "npm run stylelint && npm run eslint && npm run test-bdd",
    "test-bdd": "npm run nyc-instrument && npm run mocha && nyc report -r text -r lcov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/albertyw/codemancer.git"
  },
  "author": "Albert Wang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/albertyw/codemancer/issues"
  },
  "homepage": "https://github.com/albertyw/codemancer#readme",
  "private": true,
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "jquery": "^3.3.1",
    "moment": "^2.22.1",
    "moment-timezone": "^0.5.17",
    "node-static": "^0.7.11",
    "q": "^1.5.1",
    "uglify-es": "^3.3.9",
    "underscore": "^1.9.0"
  },
  "devDependencies": {
    "chai": "^4.0.0",
    "eslint": "^4.19.1",
    "mocha": "^5.1.1",
    "mocha-headless-chrome": "^2.0.0",
    "nyc": "^11.7.3",
    "stylelint": "^9.2.1",
    "stylelint-config-standard": "^18.2.0"
  }
}
