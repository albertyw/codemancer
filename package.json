{
  "name": "codemancer",
  "version": "1.0.0",
  "description": "https://www.codemancer.com/",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "dist-min": "browserify codemancer/js/index.js -t babelify | uglifyjs --config-file=.uglify.min.json -o codemancer/js/codemancer.min.js",
    "eslint": "eslint codemancer/js test app.js",
    "mocha": "mocha-headless-chrome -f ./test/index.htm -c .nyc_output/coverage.json",
    "nyc-instrument": "browserify -d -t browserify-istanbul ./codemancer/js/index.js -o ./instrumented/bundle.js",
    "nyc-instrument-test": "browserify -d -t browserify-istanbul ./test/test.js -o ./instrumented/test-bundle.js",
    "stylelint": "stylelint codemancer/css/*",
    "test": "npm run stylelint && npm run eslint && npm run test-bdd",
    "test-bdd": "npm run nyc-instrument && npm run nyc-instrument-test && npm run mocha && nyc report -r text -r lcov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/albertyw/codemancer.git"
  },
  "author": "Albert Wang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/albertyw/codemancer/issues"
  },
  "homepage": "https://github.com/albertyw/codemancer#readme",
  "private": true,
  "dependencies": {
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "morgan": "^1.9.1",
    "mustache": "^3.0.1",
    "rollbar": "^2.5.2",
    "rotating-file-stream": "^1.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "babel-preset-env": "^1.7.0",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "browserify-istanbul": "^3.0.1",
    "chai": "^4.2.0",
    "eslint": "^5.12.1",
    "jquery": "^3.3.1",
    "mocha": "^5.1.1",
    "mocha-headless-chrome": "^2.0.1",
    "mochify": "^6.0.4",
    "nyc": "^13.1.0",
    "q": "^1.5.1",
    "rollbar-browser": "^1.9.5",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "uglify-es": "^3.3.9"
  }
}
