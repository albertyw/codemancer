{
  "name": "codemancer",
  "version": "1.0.0",
  "description": "https://www.codemancer.com/",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "run": "bin/start.sh",
    "postinstall": "npm run google && npm run install-hadolint",
    "google": "curl -s https://apis.google.com/js/api.js > codemancer/js/google.js",
    "minify": "npm run minify-js && npm run minify-css",
    "minify-js": "npm run google && node_modules/.bin/ts-node bin/browserify.ts",
    "minify-css": "git ls-files codemancer/css | xargs node_modules/.bin/cleancss -o codemancer/css/codemancer.$(git rev-parse HEAD).min.css -O2",
    "eslint": "tsc --noEmit && eslint . --ext .ts",
    "cover": "nyc --require dotenv/config --instrumenter false mochify --transform envify --plugin tsify --require ts-node/register --require source-map-support/register --transform [ babelify --ignore [ test ] --plugins [ babel-plugin-istanbul ] ] test/*",
    "stylelint": "stylelint codemancer/css/*",
    "shellcheck": "git ls-files | grep -F .sh | xargs shellcheck --exclude=SC1091",
    "test": "npm run stylelint && npm run shellcheck && npm run hadolint && npm run eslint && npm run cover",
    "install-hadolint": "curl -sL https://github.com/hadolint/hadolint/releases/download/v1.17.3/hadolint-Linux-x86_64 > node_modules/.bin/hadolint && chmod +x node_modules/.bin/hadolint",
    "hadolint": "hadolint Dockerfile --ignore=DL3008 --ignore=SC2046 --ignore=SC2006"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/albertyw/codemancer.git"
  },
  "author": "Albert Wang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/albertyw/codemancer/issues"
  },
  "homepage": "https://github.com/albertyw/codemancer#readme",
  "private": true,
  "dependencies": {
    "app-root-path": "^3.0.0",
    "axios": "^0.21.1",
    "browserify-middleware": "^8.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "logfit": "^0.8.2",
    "morgan": "^1.10.0",
    "mustache": "^4.1.0",
    "rollbar": "^2.19.4",
    "rotating-file-stream": "^2.1.3",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "varsnap": "^1.6.4"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/app-root-path": "^1.2.4",
    "@types/browserify": "^12.0.36",
    "@types/chai": "^4.2.14",
    "@types/express": "^4.17.11",
    "@types/jquery": "^3.5.5",
    "@types/mocha": "^8.2.0",
    "@types/morgan": "^1.9.2",
    "@types/mustache": "^4.1.0",
    "@types/node": "^14.14.22",
    "@types/sinon": "^9.0.10",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "babel-plugin-istanbul": "^6.0.0",
    "babelify": "^10.0.0",
    "browser-pack-flat": "^3.4.2",
    "browserify": "=16.5.1",
    "chai": "^4.2.0",
    "clean-css-cli": "^4.3.0",
    "common-shakeify": "^0.6.2",
    "envify": "^4.1.0",
    "eslint": "^7.18.0",
    "jquery": "^3.5.1",
    "minify-stream": "^2.1.0",
    "mocha": "^8.2.1",
    "mochify": "^7.0.0",
    "nyc": "^15.1.0",
    "sinon": "^9.2.3",
    "source-map-support": "^0.5.19",
    "stylelint": "^13.9.0",
    "stylelint-config-standard": "^20.0.0",
    "sweetalert2": "^9.17.2",
    "ts-mocha": "^7.0.0",
    "tsify": "^5.0.2",
    "uglifyify": "^5.0.2",
    "unassertify": "^2.1.1"
  }
}
